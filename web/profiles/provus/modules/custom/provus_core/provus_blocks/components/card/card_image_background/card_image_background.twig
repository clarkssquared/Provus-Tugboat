{% if link %}
  <a href="{{ link }}">
{% endif %}
    <div{{ content_attributes.addClass('card') }}>
      {% if bg_image_path %}
        <div class="card-img-wrapper">
          <div class="card-img-container" style="background-image: url({{ bg_image_path }})"></div>
        </div>
      {% endif %}
      <div class="card-img-overlay">
        <div class="card-body">
          {% if title|render %}
            <h3 class="card-title">{{ title }}</h3>
            <div class="arrow-right">
              <i class="fa-solid fa-arrow-right"></i>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
{% if link %}
  </a>
{% endif %}