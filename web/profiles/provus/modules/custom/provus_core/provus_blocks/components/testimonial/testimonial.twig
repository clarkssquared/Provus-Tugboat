<div{{ content_attributes.addClass('card card-testimonial') }}>
  <div class="row">
    {% if image %}
      <div class="col-lg-6">
    {% else %}
      <div class="col-lg-12">
    {% endif %}
      <div class="testimonial-content">
        {% if body %}
          <div class="testimonial-body">{{ body }}</div>
        {% endif %}
        {% if name %}
          <div class="testimonial-name">
            {{ name }}
          </div>
        {% endif %}
        {% if role %}
          <div class="testimonial-role">
            {{ role }}
          </div>
        {% endif %}
      </div>
    </div>
    {% if image %}
      <div class="col-lg-6">
          <div class="testimonial-image">
            {{ image }}
          </div>
      </div>
    {% endif %}
  </div>
</div>