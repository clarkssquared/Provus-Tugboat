<a href="{{ link }}" rel="bookmark">
  <div{{ content_attributes.addClass('card') }}>
    <div class="card-wrapper">
      {% if image_url %}
        <div class="card-img-top">
          <img src="{{ image_url }}" alt="card-image" />
        </div>
      {% endif %}
      <div class="card-body">
        {% if content_date is not empty %}
          <div class="card-date">{{ content_date }}</div>
        {% elseif header|render %}
          <div class="card-date">{{ header }}</div>
        {% endif %}
        {% if title|render %}
          <h3 class="card-title">{{ title }}</h3>
        {% endif %}
      </div>
    </div>
  </div>
</a>