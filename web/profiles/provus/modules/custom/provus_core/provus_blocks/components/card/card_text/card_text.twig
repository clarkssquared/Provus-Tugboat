<div{{ content_attributes.addClass('card') }}>
  <div class="card-body">
    {% if title|render %}
    <h3 class="card-title">{{ title }}</h3>
    {% endif %}
    {% if body|render %}
      <div class="card-text">{{ body }}</div>
    {% endif %}
    {% if more_content|render %}
      {{ more_content }}
    {% endif %}
  </div>
</div>