<div class="article-body-wrapper person-node">
  <div class="person-header">
    <div class="row">
      <div class="col-md-8">
        <h1>{{ name }}</h1>
        {% if job_title|render %}
        <h2>{{ job_title }}</h2>
        {% endif %}
        <div class="node__content clearfix">
          <div class="content-body">
            {{ about }}
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="person-image">
          {{ image }}
        </div>
        {% if email|render %}
        <div class="email">
          <div class="email-wrapper"><span class="far fa-envelope"></span></div>{{ email }}
        </div>
        {% endif %}
        {% if phone|render %}
        <div class="phone">
          <div class="phone-wrapper"><span class="fas fa-phone"></span></div>{{ phone }}
        </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>